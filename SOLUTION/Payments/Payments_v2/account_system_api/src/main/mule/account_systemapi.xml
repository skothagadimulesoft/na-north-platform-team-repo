                        <ee:set-variable variableName="httpStatus">404</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>
        </error-handler>
    </flow>
    <flow name="get:\AccountData:account_systemapi-config">
        <db:select doc:name="Select" doc:id="9319727d-2f98-40a1-b964-9faf0fb10c5a" config-ref="Database_Config">
			<db:sql >select * from customer_accounts;</db:sql>
		</db:select>
		<ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd" doc:id="9f579cdd-826f-4543-bb29-f4fd0ae49273">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload map ( payload01 , indexOfPayload01 ) -> {
	account_id: payload01.acct_id,
	bban: payload01.bban default "",
	iban: payload01.iban,
	account_name: payload01.acct_name default "",
	bank_num: payload01.bank_num,
	upic: payload01.upic default "",
	bank_name: payload01.bank_name default "",
	country: payload01.country,
	account_balance: payload01.acct_balance as String,
	currency: payload01.currency default "",
	open_date: payload01.open_date as String default ""
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
